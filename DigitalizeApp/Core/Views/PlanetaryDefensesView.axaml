<UserControl
    x:Class="Core.Views.PlanetaryDefensesView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Core.Views"
    xmlns:vm="using:Core.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="vm:PlanetaryDefensesViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:PlanetaryDefensesViewModel />
    </Design.DataContext>

    <Border>

        <TextBlock Text="Planetary defense is the effort to monitor and protect Earth from any potential threat coming from outer space. According to the Dark Forest Theory, this includes aliens." Theme="{StaticResource pagesMainText}" />

    </Border>

</UserControl>
